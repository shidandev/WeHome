<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:endColor="#F74387" android:startColor="#962952" />
                    <stroke android:width="1dp" android:color="#ffffff" />
                    <corners android:radius="10dp" />
                    <padding android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp"/>
                </shape>
            </item>
            <item>
                <bitmap android:filter="true" android:alpha="0.7" android:antialias="true" android:src="@drawable/device_add" android:tint="#F7ff80" />
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>

                <shape android:shape="rectangle">
                    <gradient android:endColor="#962952" android:startColor="#F74387" />
                    <stroke android:width="1dp" android:color="#ffffff" />
                    <corners android:radius="10dp" />
                    <padding android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/device_add" />
            </item>
        </layer-list>
    </item>
</selector>