<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/front_bg">

        <LinearLayout
            android:id="@+id/user_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Welcome Home,"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/user_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Username"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text=" !"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/common_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_information"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/component_div"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight=".60"
                    android:background="@drawable/icon_temp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/component_div"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight=".60"
                    android:background="@drawable/icon_temp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
        <!--        <ListView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:id="@+id/list_dynamic_item"-->
        <!--            android:layout_below="@+id/common_component"-->
        <!--            >-->

        <!--        </ListView>-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/common_component"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/dynamic_component1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/common_component"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/device_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/component_div">

                        <ImageView
                            android:id="@+id/device_icon"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/component_image_div"
                            android:src="@drawable/light" />

                        <com.zcw.togglebutton.ToggleButton
                            android:id="@+id/toggle"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="10dp"
                            toggle:tbBorderWidth="1dp"
                            toggle:tbOffBorderColor="#ffffff"
                            toggle:tbOffColor="#ffffff"
                            toggle:tbOnColor="#ffffff"
                            toggle:tbSpotColor="#962952" />


                        <TextView
                            android:id="@+id/device_name"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/device_icon"
                            android:layout_toRightOf="@+id/device_icon"
                            android:text="Device Name:" />

                        <TextView
                            android:id="@+id/device_name_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/device_name"
                            android:layout_alignLeft="@+id/device_name" />

                        <TextView
                            android:id="@+id/label_level"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/device_name"
                            android:layout_alignLeft="@+id/device_name"
                            android:layout_marginTop="15dp"
                            android:text="Level" />

                        <com.mohammedalaa.seekbar.RangeSeekBarView
                            android:id="@+id/range_seekbar"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_below="@+id/label_level"
                            android:layout_alignStart="@+id/label_level"
                            android:layout_alignLeft="@+id/label_level"
                            android:layout_alignEnd="@id/toggle"
                            android:layout_marginTop="5dp"
                            app:barHeight="10dp"
                            app:baseColor="#932952"
                            app:circleRadius="10dp"
                            app:circleTextColor="#96005f"
                            app:circleTextSize="8dp"
                            app:currentValue="0"
                            app:fillColor="#F7ff80"
                            app:maxValue="5"
                            app:minValue="0"
                            app:stepValue="1" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dynamic_component2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dynamic_component1"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/device_item2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/component_div">

                        <ImageView
                            android:id="@+id/device_icon2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/component_image_div"
                            android:src="@drawable/fans" />

                        <com.zcw.togglebutton.ToggleButton
                            android:id="@+id/toggle2"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="10dp"
                            toggle:tbBorderWidth="1dp"
                            toggle:tbOffBorderColor="#ffffff"
                            toggle:tbOffColor="#ffffff"
                            toggle:tbOnColor="#ffffff"
                            toggle:tbSpotColor="#962952" />


                        <TextView
                            android:id="@+id/device_name2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/device_icon2"
                            android:layout_toRightOf="@+id/device_icon2"
                            android:text="Device Name:" />

                        <TextView
                            android:id="@+id/device_name_input2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/device_name2"
                            android:layout_alignLeft="@+id/device_name2" />

                        <TextView
                            android:id="@+id/label_level2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/device_name2"
                            android:layout_alignLeft="@+id/device_name2"
                            android:layout_marginTop="15dp"
                            android:text="Level" />

                        <com.mohammedalaa.seekbar.RangeSeekBarView
                            android:id="@+id/range_seekbar2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_below="@+id/label_level2"
                            android:layout_alignStart="@+id/label_level2"
                            android:layout_alignLeft="@+id/label_level2"
                            android:layout_alignEnd="@id/toggle2"
                            android:layout_marginTop="5dp"
                            app:barHeight="10dp"
                            app:baseColor="#932952"
                            app:circleRadius="10dp"
                            app:circleTextColor="#96005f"
                            app:circleTextSize="8dp"
                            app:currentValue="0"
                            app:fillColor="#F7ff80"
                            app:maxValue="5"
                            app:minValue="0"
                            app:stepValue="1" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dynamic_component3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dynamic_component2"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/device_item3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/component_div">

                        <ImageView
                            android:id="@+id/device_icon3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/component_image_div"
                            android:src="@drawable/light" />

                        <com.zcw.togglebutton.ToggleButton
                            android:id="@+id/toggle3"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="10dp"
                            toggle:tbBorderWidth="1dp"
                            toggle:tbOffBorderColor="#ffffff"
                            toggle:tbOffColor="#ffffff"
                            toggle:tbOnColor="#ffffff"
                            toggle:tbSpotColor="#962952" />


                        <TextView
                            android:id="@+id/device_name3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/device_icon3"
                            android:layout_toRightOf="@+id/device_icon3"
                            android:text="Device Name:" />

                        <TextView
                            android:id="@+id/device_name_input3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/device_name3"
                            android:layout_alignLeft="@+id/device_name" />

                        <TextView
                            android:id="@+id/label_level3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/device_name3"
                            android:layout_alignLeft="@+id/device_name3"
                            android:layout_marginTop="15dp"
                            android:text="Level" />

                        <com.mohammedalaa.seekbar.RangeSeekBarView
                            android:id="@+id/range_seekbar3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_below="@+id/label_level3"
                            android:layout_alignStart="@+id/label_level3"
                            android:layout_alignLeft="@+id/label_level3"
                            android:layout_alignEnd="@id/toggle3"
                            android:layout_marginTop="5dp"
                            app:barHeight="10dp"
                            app:baseColor="#932952"
                            app:circleRadius="10dp"
                            app:circleTextColor="#96005f"
                            app:circleTextSize="8dp"
                            app:currentValue="0"
                            app:fillColor="#F7ff80"
                            app:maxValue="5"
                            app:minValue="0"
                            app:stepValue="1" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>